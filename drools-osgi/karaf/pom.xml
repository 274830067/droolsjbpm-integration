<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <artifactId>parent</artifactId>
    <groupId>org.drools.karaf</groupId>
    <version>6.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>drools-component</artifactId>
  <packaging>bundle</packaging>
  <version>6.0.0-SNAPSHOT</version>

  <name>Drools :: Component Bundle</name>

  <dependencies>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-core</artifactId>
      <version>${drools.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-compiler</artifactId>
      <version>${drools.version}</version>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-api</artifactId>
      <version>${drools.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-internal</artifactId>
      <version>${drools.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!--
    <dependency>
    <groupId>org.kie</groupId>
    <artifactId>knowledge-api</artifactId>
    <version>${drools.version}</version>
    <scope>runtime</scope>
    </dependency>

    <dependency>
    <groupId>org.kie</groupId>
    <artifactId>knowledge-internal-api</artifactId>
    <version>${drools.version}</version>
    <scope>runtime</scope>
    </dependency>
    -->
  </dependencies>

  <build>
    <defaultGoal>install</defaultGoal>

    <resources>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${maven-bundle-plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>Drools Core, Compiler &amp; KIE</Bundle-Name>
            <Import-Package>
              !com.sun*,
              !org.drools*,
              org.drools.grid,
              org.drools.grid.impl,
              <!-- TODO To be investigated as this package is required by org.drools.builder.conf.impl
              org.kie.process;resolution:=optional,
               -->
              <!-- Required for CDI stuffs -->
              javax.enterprise.context,
              <!-- java compilers are optional: only need one at most -->
              org.codehaus.janino.*;resolution:=optional,
              org.eclipse.jdt.*,
              *
            </Import-Package>
            <Embed-Dependency>
              artifactId=drools-core|drools-compiler|kie-api|kie-internal
            </Embed-Dependency>
            <DynamicImport-Package>
              <!-- Add this package as some classes are created by EclipseCompiler -->
              org.kie.process
            </DynamicImport-Package>
            <Embed-Transitive>false</Embed-Transitive>
            <_exportcontents>
              org.drools*,
              org.kie*
            </_exportcontents>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>