<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:drools="http://drools.org/schema/drools-spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://drools.org/schema/drools-spring http://drools.org/schema/drools-spring.xsd">

    <drools:grid-node id="node-dt-1"/>

    <drools:kbase id="kbase-dt-1" node="node1">
        <drools:configuration>
            <drools:mbeans enabled="true"/>
        </drools:configuration>
        <drools:resources>
            <drools:resource type="DTABLE" source="classpath:data/IntegrationExampleTest.xls">
               <drools:decisiontable-conf input-type="XLS" worksheet-name="Tables_2" />
            </drools:resource>
        </drools:resources>
    </drools:kbase>

    <drools:ksession id="ksession-dt-1"
                     type="stateless"
                     name="ksession-dt-1"
                     kbase="kbase-dt-1"
                     node="node-dt-1"/>

</beans>